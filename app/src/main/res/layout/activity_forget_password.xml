<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_green"
    tools:context=".forget_password">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/bungee_shade"
            android:padding="10dp"
            android:text="LUNTIAN"
            android:textColor="@color/white"
            android:textSize="55sp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/fredoka_regular"
            android:text="Forget password?"
            android:textColor="@color/white"
            android:textSize="22sp"></TextView>
        <EditText
            android:id="@+id/forget_emailTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/fredoka_regular"
            android:hint="enter your email address"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/darker_green"
            android:textSize="20sp"></EditText>
        <Button
            android:id="@+id/resetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:background="@drawable/mybutton"
            android:fontFamily="@font/fredoka_regular"
            android:padding="10dp"
            android:text="reset password"
            android:textColor="@color/darker_green"
            android:textSize="20sp"
            app:backgroundTint="@color/white"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true">
        <ProgressBar
            android:id="@+id/resetProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleLarge"
            android:visibility="gone"></ProgressBar>

    </LinearLayout>

</RelativeLayout>